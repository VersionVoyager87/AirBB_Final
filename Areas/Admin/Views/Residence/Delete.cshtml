@model AirBB.Models.DomainModels.Residence

@{
    ViewData["Title"] = "Delete Residence";
    Layout = "_AdminLayout";
}

<h2 class="text-danger mt-4">Delete Residence</h2>

<p>Are you sure you want to delete this residence?</p>

<div class="mb-3">
    <strong>@Model.Name</strong> in <strong>@Model.Location?.Name</strong>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ResidenceId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
