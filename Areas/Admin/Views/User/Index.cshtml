@model IEnumerable<AirBB.Models.DomainModels.AppUser>
@{
    ViewData["Title"] = "User List";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">Registered Users</h2>

@if (TempData["message"] != null)
{
    <div class="alert alert-success text-center fw-bold">
        @TempData["message"]
    </div>
}

<a asp-action="Add" class="btn btn-success mb-3">
    <i class="fa fa-plus"></i> Add New User
</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Phone</th>
            <th>User Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.DOB?.ToShortDateString()</td>
            <td>@user.PhoneNumber</td>
            <td>@user.UserType</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.AppUserId" class="btn btn-sm btn-primary me-1">
                    <i class="fa fa-edit"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@user.AppUserId" class="btn btn-sm btn-danger">
                    <i class="fa fa-trash"></i> Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
