@model AirBB.Models.DomainModels.AppUser
@{
    ViewData["Title"] = "Delete User";
    Layout = "_AdminLayout";
}

<h2 class="text-danger mb-3">Delete User</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this user?
</div>

<div class="mb-3">
    <strong>Name:</strong> @Model.Name <br />
    <strong>Email:</strong> @Model.Email <br />
    <strong>Date of Birth:</strong> @Model.DOB?.ToShortDateString() <br />
    <strong>User Type:</strong> @Model.UserType
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AppUserId" />
    <button type="submit" class="btn btn-danger">
        <i class="fa fa-trash"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
