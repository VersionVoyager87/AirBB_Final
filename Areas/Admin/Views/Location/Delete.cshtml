@model AirBB.Models.DomainModels.Location
@{
    ViewData["Title"] = "Delete Location";
    Layout = "_AdminLayout";
}

<h2 class="mt-3 mb-4 text-danger">Delete Location</h2>

<h4>Are you sure you want to delete this location?</h4>

<div class="mb-3">
    <strong>Name:</strong> @Model.Name<br />
    <strong>Region:</strong> @Model.Region<br />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="LocationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
