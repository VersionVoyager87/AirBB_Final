@model IEnumerable<AirBB.Models.DomainModels.Location>

@{
    ViewData["Title"] = "Manage Locations";
}

<h2>Manage Locations</h2>

<a asp-action="Add" class="btn btn-primary mb-3">Add New Location</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Region</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var loc in Model)
    {
        <tr>
            <td>@loc.Name</td>
            <td>@loc.Region</td>
            <td>
                <a asp-action="Edit"
                   asp-route-id="@loc.LocationId"
                   class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete"
                   asp-route-id="@loc.LocationId"
                   class="btn btn-sm btn-danger ms-1">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
